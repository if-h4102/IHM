<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.h4102.tp.miam.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_restaurant"
                android:onClick="goToRestaurantActivity"
                android:src="@drawable/retaurants"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_soldes"
                android:src="@drawable/insa"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_orgaRepas"
                android:src="@drawable/organiser_repas"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_invitation"
                android:src="@drawable/repas_futurs"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_sos"
                android:src="@drawable/sos"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:id="@+id/bt_map"
                android:src="@drawable/temps_attente"
                android:scaleType="fitCenter"
                android:background="@drawable/abc_action_bar_item_background_material"
                android:padding="20dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
